{
    "seed": 72,
    "pretrain_data_txt": "./datasets/pretrain_50k.csv",

    "aug_mode_1": "drop",
    "aug_mode_2": "masking",

    "temperature": 0.1,
    "use_cosine_similarity": true,

    "batch_size": 32,

    "freeze_layers": 11,

    "pooler": "cls", 

    "lr": 5e-5,
    "scheduler": {
        "type": "LinearLR",
        "step_size": 10,
        "gamma": 0.1,
        "start_factor": 0.5,
        "total_iters": 4,
        "optional_params": {}
    },

    "gradient_clipping": {
        "enabled": true,
        "max_grad_norm": 1.0
    },

    "weight_decay": 0.001,

    "n_epochs": 10,

    "log_interval": 0.01,
    "save_interval": 0.2,

    "align_alpha": 2,
    "alignment_w": 1,
    "uniformity_w": 1,
    "uniformity_t": 2,


    "save_path": "./model/polycl_model_test.pt"



}
