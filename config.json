{
    "seed": 72,
    "pretrain_data_txt": "./datasets/pretrain_1m.txt",

    "aug_mode_1": "original",
    "aug_mode_2": "original",
    "model_dropout": true,

    "temperature": 0.05,
    "use_cosine_similarity": true,

    "batch_size": 128,
    "freeze_layers": false,

    "pooler": "cls", 

    "lr": 1e-5,
    "weight_decay": 0.0,

    "scheduler": {
        "type": "LinearLR",
        "step_size": 10,
        "gamma": 0.1,
        "optional_params": {}
    },

    "gradient_clipping": {
        "enabled": true,
        "max_grad_norm": 1.0
    },

    "n_epochs": 5,

    "log_interval": 0.01,
    "model_save_interval": 0.2,

    "align_alpha": 2,
    "alignment_w": 1,
    "uniformity_w": 1,
    "uniformity_t": 2


}
